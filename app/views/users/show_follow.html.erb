<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1><%= @user.name %></h1>
<span><%= link_to "view my profile", @user %></span>

<span><b>post:</b> <%= @user.posts.count %></span>
</section>
</div>

</section>
</aside>
<div class="col-md-8">
<h3><%= @title %></h3>
<% if @users.any? %>
<ul class="users follow">
<%= render @users %>
</ul>
<%= will_paginate %>
<% end %>
</div>